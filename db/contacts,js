import db_conn from "./connection.js";
import { DataTypes } from "sequelize";

const Contact = db_conn.define("contacts", {
  name: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  email: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  phone: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  favorite: {
    type: DataTypes.BOOLEAN,
    defaultValue: false,
  },
});

Contact.sync();

export default Contact;